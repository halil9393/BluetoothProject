<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DetailFragment"
    android:background="@color/purple_200">

    <TextView
        android:id="@+id/tvDetailMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Detail"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAMSUNG GALAXY"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailMessage" />

    <TextView
        android:id="@+id/tvDeviceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123465789"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvUuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123465789"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceAddress"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/tvCharacteristics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123465789"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tvUuid"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>